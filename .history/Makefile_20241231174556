POT_FILE = messages.pot
PO_DIR = locale
MO_FILES = $(PO_DIR)/sr/LC_MESSAGES/app.mo $(PO_DIR)/cz/LC_MESSAGES/app.mo $(PO_DIR)/en/LC_MESSAGES/app.mo

all: $(MO_FILES)

$(POT_FILE):
	find . -name '*.py' -not -path './.history/*' -not -path './.debris/*' | xargs xgettext --keyword=_ --from-code=UTF-8 -o $(POT_FILE)

$(PO_DIR)/%/LC_MESSAGES/app.po: $(POT_FILE)
	@if [ ! -d $(PO_DIR)/$*/LC_MESSAGES ]; then mkdir -p $(PO_DIR)/$*/LC_MESSAGES; fi
	cp $(POT_FILE) $(PO_DIR)/$*/LC_MESSAGES/app.po

$(PO_DIR)/%/LC_MESSAGES/app.mo: $(PO_DIR)/%/LC_MESSAGES/app.po
	msgfmt $< -o $@

clean:
	rm -f $(POT_FILE)
	rm -f $(PO_DIR)/*/LC_MESSAGES/app.po
	rm -f $(PO_DIR)/*/LC_MESSAGES/app.mo
