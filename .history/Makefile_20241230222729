POT_FILE = messages.pot
PO_DIR = locale
MO_FILES = $(PO_DIR)/sr/LC_MESSAGES/app.mo $(PO_DIR)/cz/LC_MESSAGES/app.mo

all: $(MO_FILES)

$(POT_FILE):
	xgettext -o $(POT_FILE) $(shell find . -name '*.py')

$(PO_DIR)/%/LC_MESSAGES/app.po: $(POT_FILE)
	cp $(POT_FILE) $@

$(PO_DIR)/%/LC_MESSAGES/app.mo: $(PO_DIR)/%/LC_MESSAGES/app.po
	msgfmt $< -o $@
