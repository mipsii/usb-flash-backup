POT_FILE = messages.pot
PO_DIR = locale
LANGUAGES = sr cz en
MO_FILES = $(foreach lang, $(LANGUAGES), $(PO_DIR)/$(lang)/LC_MESSAGES/app.mo)

all: $(MO_FILES)

$(POT_FILE):
	find . -name '*.py' | xargs xgettext --keyword=_ --from-code=UTF-8 -o $(POT_FILE)

$(PO_DIR)/%/LC_MESSAGES/app.po: $(POT_FILE)
	@mkdir -p $(dir $@)
	@if [ ! -f $@ ]; then \
	  cp $(POT_FILE) $@; \
	fi

$(PO_DIR)/%/LC_MESSAGES/app.mo: $(PO_DIR)/%/LC_MESSAGES/app.po
	msgfmt $< -o $@

clean:
	rm -f $(POT_FILE)
	rm -f $(PO_DIR)/*/LC_MESSAGES/app.po
	rm -f $(MO_FILES)
