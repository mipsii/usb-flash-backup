QWidget {
    background-color: #2b2b2b;
    color: #f5f5f5;
    font-size: 14px;
    font-family: "Arial";
}

QLabel {
    font-weight: bold;
    margin: 5px;
}

QPushButton {
    background-color: #4caf50;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
}

QPushButton:hover {
    background-color: #45a049;
}

QListWidget {
    border: 1px solid #f5f5f5;
    background-color: #3c3f41;
    color: #f5f5f5;
}
